@inherits ProductCategoriesNavMenuBase

@if (ProductCategoriesDtos == null)
{
    <DisplayLoading/>
}
else if (ErrorMessage != null )
{
    <DisplayError ErrorMessage="@ErrorMessage"/>
}
else
{
    @foreach (var item in ProductCategoriesDtos)
    {
        var link = "/ProductsByCategory/" + item.Id;

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@item.IconCSS"></span>&nbsp;@item.Name
            </NavLink>
        </div>
    }
}